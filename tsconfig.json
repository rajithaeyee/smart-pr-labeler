{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "moduleResolution": "node",
      "lib": ["ES2022"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "removeComments": false,
      "preserveConstEnums": true,
      "outDir": "./lib",
      "rootDir": "./src",
      "declaration": true,
      "sourceMap": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "__tests__/**/*"],
    "exclude": ["node_modules", "lib", "dist"]
  }