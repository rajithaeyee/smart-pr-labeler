{
  "name": "smart-pr-labeler",
  "version": "1.0.0",
  "description": "GitHub Action to automatically label PRs based on their title",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build lib/index.js -o dist",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write **/*.ts",
    "clean": "rm -rf lib dist"
  },
  "keywords": [
    "github",
    "actions",
    "label",
    "automation",
    "pull-request"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^16.18.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.38.0",
    "eslint-plugin-github": "^4.7.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.7.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.3.1",
    "typescript": "^5.0.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "clearMocks": true,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json",
          "useESM": false
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(ts-jest)/)"
    ],
    "verbose": true
  }
}
